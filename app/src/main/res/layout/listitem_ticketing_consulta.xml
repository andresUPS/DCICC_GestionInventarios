<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <!-- Cuadro de texto para Código UPSde Activo -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estado ticket:"
            android:maxLines="1"
            android:maxLength="30"
            android:singleLine="true"
            android:editable="false"
            android:inputType="none"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Cuadro de texto para Código UPSde Activo -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/fechaApertura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha:"
            android:maxLines="1"
            android:maxLength="30"
            android:singleLine="true"
            android:editable="false"
            android:inputType="none"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Cuadro de texto para Código UPSde Activo -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/tipoReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Activo, accesorio o laboratorio:"
            android:maxLines="1"
            android:maxLength="100"
            android:singleLine="true"
            android:editable="false"
            android:inputType="none"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Cuadro de texto para Código UPSde Activo -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/responsable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Responsable asignado:"
            android:maxLines="1"
            android:maxLength="60"
            android:singleLine="true"
            android:editable="false"
            android:inputType="none"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Cuadro de texto para Código UPSde Activo -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/comentario"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:inputType="none"
            android:hint="Comentario de ticket:"
            android:gravity="top"
            android:singleLine="false"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:editable="false"/>
    </android.support.design.widget.TextInputLayout>


</LinearLayout>